@model IEnumerable<AdWorksCore.Web.Models.Person>

@{
    ViewData["Title"] = "Employee List";
}
<p>
    <a asp-action="Create">Create New</a>
</p>
@foreach (var item in Model)
{
    <div class="col-md-4">
        <div class="well well-sm">
            <div class="form-group">
                <label asp-for="@item.Title" class="control-label"></label>
                <input asp-for="@item.Title" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@item.FirstName" class="control-label"></label>
                <input asp-for="@item.FirstName" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@item.MiddleName" class="control-label"></label>
                <input asp-for="@item.MiddleName" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@item.LastName" class="control-label"></label>
                <input asp-for="@item.LastName" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@item.Suffix" class="control-label"></label>
                <input asp-for="@item.Suffix" class="form-control" readonly />
            </div>
            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
            </div>
        </div>
    </div>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suffix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastModified)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.Id">@item.Id</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Suffix)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModified)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-link">Create New Employee</a>
